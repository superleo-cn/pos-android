<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dialog_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/dialog"
        android:padding="20dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/dialog_title_panel"
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/dialog_title"
                style="@style/StyleBarTitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom|center"
                android:text="温馨提示"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_message_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp" >

            <TextView
                android:id="@+id/dialog_message"
                style="@style/StyleBarTitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="welcome to china"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayoutID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textDialogAllMoenyID"
                style="@style/StyleBarTitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="总金额：$ 200"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textDialogSearchMoenyID"
                style="@style/StyleBarTitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="找零：$3.2"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:padding="10dip" >

            <Button
                android:id="@+id/dialog_yes"
                style="@style/StyleBarTitle"
                android:layout_width="42dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/tong_btu_bg"
                android:gravity="center"
                android:text="yes"
                android:textSize="25dp" >
            </Button>

            <Button
                android:id="@+id/dialog_no"
                style="@style/StyleBarTitle"
                android:layout_width="42dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/tong_btu_bg2"
                android:gravity="center"
                android:text="no"
                android:textSize="25dp" >
            </Button>

            <Button
                android:id="@+id/dialog_cancel"
                style="@style/StyleBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/tong_btu_bg2"
                android:gravity="center"
                android:text="cancel"
                android:textSize="25dp"
                android:visibility="gone" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>