<?xml version="1.0" encoding="utf-8"?>
<com.android.dialog.design.DialogView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal" >

    <RelativeLayout
        android:id="@+id/dialog_panel"
        android:layout_width="409dp"
        android:layout_height="344dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/dialog" >

        <LinearLayout
            android:id="@+id/dialog_title_panel"
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/dialog_title"
                style="@style/StyleBarTitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom|center"
                android:textSize="27dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_message_panel"
            android:layout_width="fill_parent"
            android:layout_height="108dp"
            android:layout_below="@id/dialog_title_panel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/dialog_message"
                style="@style/StyleBarTitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_buttons"
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/dialog_message_panel"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center" >

            <Button
                android:id="@+id/dialog_yes"
                style="@style/StyleBarTitle"
                android:layout_width="42dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/tong_btu_bg3"
                android:gravity="center"
                android:text="yes"
                android:textSize="25dp"
                android:visibility="gone" >
            </Button>

            <Button
                android:id="@+id/dialog_no"
                style="@style/StyleBarTitle"
                android:layout_width="42dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/tong_btu_bg3"
                android:gravity="center"
                android:text="no"
                android:textSize="25dp"
                android:visibility="gone" >
            </Button>

            <Button
                android:id="@+id/dialog_cancel"
                style="@style/StyleBarTitle"
                android:layout_width="42dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/tong_btu_bg3"
                android:gravity="center"
                android:textSize="25dp"
                android:text="cancel"
                android:visibility="gone" >
            </Button>
        </LinearLayout>
    </RelativeLayout>

</com.android.dialog.design.DialogView>