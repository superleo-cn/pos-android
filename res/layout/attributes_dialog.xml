<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="500dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/dialog"
        android:orientation="vertical"
        android:padding="20dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" >

            <TextView
                style="@style/StyleBarTitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom|center"
                android:text="属性"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <GridView
                android:id="@+id/gridViewID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:columnWidth="5dip"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="10dip" >

            <Button
                android:id="@+id/dialog_yes"
                style="@style/StyleBarTitle"
                android:layout_width="42dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:background="@drawable/tong_btu_bg"
                android:gravity="center"
                android:paddingBottom="50dip"
                android:paddingLeft="25dip"
                android:paddingRight="25dip"
                android:paddingTop="50dip"
                android:text="@string/btu_queren"
                android:textSize="50dp" >
            </Button>

            <Button
                android:id="@+id/dialog_no"
                style="@style/StyleBarTitle"
                android:layout_width="42dp"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:background="@drawable/tong_btu_bg2"
                android:gravity="center"
                android:paddingBottom="50dip"
                android:paddingLeft="25dip"
                android:paddingRight="25dip"
                android:paddingTop="50dip"
                android:text="@string/btn_quxiao"
                android:textSize="50dp" >
            </Button>

            <Button
                android:id="@+id/dialog_cancel"
                style="@style/StyleBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="@drawable/tong_btu_bg2"
                android:gravity="center"
                android:text="cancel"
                android:textSize="25dp"
                android:visibility="gone" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>