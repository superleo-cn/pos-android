<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_top"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#111f39"
    android:paddingBottom="5dip"
    android:paddingTop="5dip" >
<!-- 252932 
-->
    <ImageView
        android:id="@+id/menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:scaleType="centerInside"
        android:padding="10dip"
        android:src="@drawable/menu_btn" />

    <TextView
        android:id="@+id/food_menu_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dip"
        android:layout_toRightOf="@+id/menu_btn"
        android:text="@string/layoutLeft_title"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="2dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dip"
        android:layout_toRightOf="@+id/food_menu_txt"
        android:background="#00000000"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/login_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/line"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/login_bg" />

    <TextView
        android:id="@+id/login_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/login_image"
        android:textSize="22sp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/letout_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/login_name"
        android:drawablePadding="5dip"
        android:singleLine="true"
        android:text="@string/shop_info"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/letout_name_tv"
        android:text="@string/layoutLeft_title"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dip" >

        <RelativeLayout
            android:id="@+id/layout_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <!-- <ImageView
                android:id="@+id/exit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dip"
                android:background="#00000000"
                android:scaleType="centerInside"
                android:src="@drawable/exit_bg" /> 

            <TextView
                android:id="@+id/textDailyPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="@string/daily_pay"
                android:textColor="#CA5126"
                android:padding="10dp"
                android:textSize="28sp" 
                android:textStyle="bold" />
           -->
        </RelativeLayout>

        <ImageView
            android:id="@+id/wifi_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@+id/layout_exit"
            android:background="#00000000"
            android:scaleType="fitXY" />
        
        <Spinner 
            android:id="@+id/orderId_spinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:visibility="visible"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>
