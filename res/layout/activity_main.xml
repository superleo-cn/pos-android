<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background" >

    <!-- android:background="#E6E6E6" -->
    <include layout="@layout/menu" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/layout_top"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="5" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <LinearLayout
                        android:id="@+id/layout_left"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" />

                    <GridView
                        android:id="@+id/food_list"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:descendantFocusability="blocksDescendants"
                        android:horizontalSpacing="5dp"
                        android:numColumns="4"
                        android:verticalSpacing="10dp"
                        android:visibility="gone" >
                    </GridView>
                </RelativeLayout>
            </ScrollView>

            <RelativeLayout
                android:id="@+id/layout_right"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/layout_left"
                android:layout_weight="3" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="5dip"
                        android:layout_weight="1.20"
                        android:background="@drawable/cart" >

                        <ListView
                            android:id="@+id/select_list"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="20dip"
                            android:layout_marginLeft="20dip"
                            android:layout_marginRight="20dip"
                            android:layout_marginTop="16dip"
                            android:cacheColorHint="#FFFFFF"
                            android:divider="#FFFFFF"
                            android:fadingEdge="none"
                            android:scrollingCache="false"
                            android:transcriptMode="alwaysScroll" >
                        </ListView>
                    </RelativeLayout>
                    <!-- #252932 -->

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="5dip"
                        android:layout_weight="1" >

                        <!-- android:background="#001233" -->

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/cart" >

                            <!-- android:background="@drawable/result_background" -->

                            <LinearLayout
                                android:id="@+id/layout_tp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"
                                android:layout_marginTop="5dip"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="5dip"
                                android:paddingRight="5dip"
                                android:weightSum="3" >

<!--                                 android:background="#B8BEBF" -->

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/total_prie"
                                        android:textColor="#FFFFFF" />

                                    <TextView
                                        android:id="@+id/total_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.00"
                                        android:textColor="#FFFFFF"
                                        android:textSize="34sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/gathering"
                                        android:textColor="#FFFFFF" />

                                    <TextView
                                        android:id="@+id/gathering"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.00"
                                        android:textColor="#FFFFFF"
                                        android:textSize="34sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/surplus"
                                        android:textColor="#FFFFFF" />

                                    <TextView
                                        android:id="@+id/surplus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.00"
                                        android:textColor="#E3313E"
                                        android:textSize="34sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_mid"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/layout_tp"
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"
                                android:layout_marginTop="5dip"
                                android:orientation="horizontal" >

                                <!--
                                android:layout_marginLeft="10dip"
                                android:layout_marginRight="10dip"                                -->
                                
                                <RelativeLayout
                                    android:id="@+id/r_lay_id_take_package"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/layout_mid_bg"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/take_package"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:background="#00000000"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/package_not_select" />

                                    <TextView
                                        android:id="@+id/tv_package"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="5dip"
                                        android:layout_toRightOf="@+id/take_package"
                                        android:text="@string/take_package"
                                        android:textColor="#CD6715"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
 
                                <RelativeLayout
                                    android:id="@+id/r_lay_id_foc"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dip"
                                    android:layout_weight="1"
                                    android:background="@drawable/layout_mid_bg"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/foc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:background="#00000000"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/package_not_select" />

                                    <TextView
                                        android:id="@+id/tv_foc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="5dip"
                                        android:layout_toRightOf="@+id/foc"
                                        android:text="@string/foc"
                                        android:textColor="#CD6715"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />
                                </RelativeLayout> 
                                
                                <!--  
                                <RelativeLayout
                                    android:id="@+id/r_lay_id_bar_code"
                                    android:layout_width="0dip"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >

                                    <EditText
                                        android:id="@+id/bar_code_text"
                                        android:layout_width="220dip"
                                        android:layout_height="fill_parent"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="5dip"
                                        android:background="@drawable/edit_bg"
                                        android:inputType="text" />

                                    <Button
                                        android:id="@+id/bar_code_btn"
                                        android:layout_width="110dip"
                                        android:layout_height="fill_parent"
                                        android:layout_marginLeft="5dip"
                                        android:layout_marginTop="3dip"
                                        android:layout_toRightOf="@+id/bar_code_text"
                                        android:background="@drawable/tong_btu_bg"
                                        android:text="@string/scan"
                                        android:textColor="#FFFFFF"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                                -->
                                
                                <RelativeLayout
                                    android:id="@+id/r_lay_id_discount"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dip"
                                    android:layout_weight="1"
                                    android:background="@drawable/layout_mid_bg"
                                    android:orientation="horizontal" >

                                    <ImageView
                                        android:id="@+id/discount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:background="#00000000"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/package_not_select" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="5dip"
                                        android:layout_toRightOf="@+id/discount"
                                        android:text="@string/discount"
                                        android:textColor="#CD6715"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_below="@+id/layout_mid"
                                android:layout_marginTop="5dip" >

                                <!--
        android:layout_marginLeft="7dip" android:layout_marginRight="7dip" -->

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="3" >

                                    <com.android.activity.MyGridView
                                        android:id="@+id/digit_btn"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_marginLeft="5dip"
                                        android:layout_weight="0.98"
                                        android:horizontalSpacing="5dp"
                                        android:numColumns="3"
                                        android:stretchMode="columnWidth"
                                        android:verticalSpacing="5dp" />

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_marginBottom="5dip"
                                        android:layout_marginLeft="3dip"
                                        android:layout_marginRight="15dip"
                                        android:layout_marginTop="5dip"
                                        android:layout_weight="2"
                                        android:orientation="vertical" >

                                        <!--  
                               			<Button
                                            android:id="@+id/order_btn"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/larger_btu_bg"
                                            android:gravity="center"
                                            android:text="@string/message_order"
                                            android:textColor="#FFFFFF"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />
                                         
                                        <Button
                                            android:id="@+id/card_btn"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/larger_btu_bg"
                                            android:gravity="center"
                                            android:text="@string/message_card"
                                            android:textColor="#FFFFFF"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />
                                      	-->

                                        <Button
                                            android:id="@+id/ok_btn"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:layout_marginTop="2dip"
                                            android:layout_weight="1"
                                            android:background="@drawable/larger_btu_bg"
                                            android:gravity="center"
                                            android:text="@string/message_cash"
                                            android:textColor="#ffffff"
                                            android:textSize="30sp"
                                            android:textStyle="bold" />
                                        <!--
                                            android:layout_marginLeft="2dip"
                                            android:layout_marginRight="8dip"
                                        -->
                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>
                        </RelativeLayout>
                    </ScrollView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>