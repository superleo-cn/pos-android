<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background" android:focusableInTouchMode="true">
    <!--android:background="#E6E6E6"  -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/login_m_bg02"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
         <!--   android:background="@drawable/login_m_bg02"  --> 

        <LinearLayout
            android:layout_width="300dip"
            android:layout_height="300dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dip"
            android:orientation="vertical" >
            
			<!--  	android:background="@drawable/login_m_bg" -->
            <!-- 来一碗  LOGO-->
            <ImageView
                android:id="@+id/image_logo_ico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:src="@drawable/login_logo_bk" 
                android:layout_marginBottom="10dip"/>
                
            <!-- WEEBO LOGO -->
            <!-- 
            <ImageView
                android:id="@+id/image_logo_ico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dip"
                android:src="@drawable/login_logo" 
                android:layout_marginBottom="10dip"/>
                 -->
            <!-- android:src="@drawable/login_logo"  -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/login_edit_bg"
                android:orientation="horizontal"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="@string/login_name"
                    android:textColor="#81635E"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/login_name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="0dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="#81635E"
                    android:singleLine="true"
                    android:digits="@string/register_name_digits"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/login_edit_bg"
                android:orientation="horizontal"
                android:padding="5dip" >
			<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="@string/login_password"
                    android:textColor="#81635E"
                    android:textSize="20sp" />
                
                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="0dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="#81635E"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:digits="@string/register_name_digits"
                    android:password="true" />
            </LinearLayout>

            <Button
                android:id="@+id/login_ok"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_below="@+id/login_password"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/login_sbumit_bg"
                android:text="@string/message_login" 
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>